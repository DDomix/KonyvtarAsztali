    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Button fx:id="torlesButton" alignment="CENTER" mnemonicParsing="false" onAction="#torlesClick" text="Törlés" />
      <TableView fx:id="tableview" prefHeight="400.0" prefWidth="450.0">
        <columns>
          <TableColumn fx:id="titlefield" prefWidth="156.0" text="Cím" />
          <TableColumn fx:id="authorfield" prefWidth="115.0" text="Szerző" />
            <TableColumn fx:id="publish_field" prefWidth="91.0" text="Kiadás éve" />
            <TableColumn fx:id="pages_field" prefWidth="97.0" text="Oldalszám" />
        </columns>
      </TableView>
   </children>
</VBox>
